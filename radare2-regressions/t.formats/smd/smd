#!/bin/sh

for a in . .. ../.. ; do [ -e $a/tests.sh ] && . $a/tests.sh ; done

NAME="sega megadrive rom info"
FILE=../../bins/smd/LiquidSpaceDodgerV3.bin
ARGS=''
BROKEN=
CMDS="i~!fd"
EXPECT='type     ROM
file     ../../bins/smd/LiquidSpaceDodgerV3.bin
size     0x272f8
iorw     false
blksz    0x0
mode     -r--
block    0x100
format   smd
havecode true
pic      false
canary   false
nx       false
crypto   false
va       true
class    SEGA MEGASIS    (C)2015 James L.
arch     m68k
bits     16
machine  Sega Megadrive
os       smd
endian   little
stripped false
static   true
linenum  false
lsyms    false
relocs   false
binsz    160504
'
run_test

