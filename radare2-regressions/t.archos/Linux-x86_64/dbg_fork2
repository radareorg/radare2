#!/bin/sh

# test debugging forking children (c) 2016 jduck

for a in . .. ../.. ; do [ -e $a/tests.sh ] && . $a/tests.sh ; done

NAME='dbg.fork.child.bp.swstep'
FILE=../../bins/elf/analysis/x64-fork-test
ARGS=-d
BROKEN=
CMDS='e scr.color=0
e dbg.swstep=true
e dbg.forks=true
db sym.break_on_me
dc
dpc
dc
db-*
dc
dc
dp-
dp=`dp~ppid[1]`
dc
dc
'
EXPECT='child in leaf!
child process terminating!
[+] signal 17 aka SIGCHLD received 0
main exiting!
'
IGNORE_ERR=1
run_test

NAME='dbg.fork.child.bp.hwstep'
FILE=../../bins/elf/analysis/x64-fork-test
ARGS=-d
BROKEN=
CMDS='e scr.color=0
e dbg.swstep=false
e dbg.forks=true
db sym.break_on_me
dc
dpc
dc
db-*
dc
dc
dp-
dp=`dp~ppid[1]`
dc
dc
'
EXPECT='child in leaf!
child process terminating!
[+] signal 17 aka SIGCHLD received 0
main exiting!
'
IGNORE_ERR=1
run_test
