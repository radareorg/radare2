#!/bin/sh

# TODO: This script requires ROOT to be run in OSX
# (or just sign the r2 binary to get debugger priviledges)
# GPL 3+ - Copyright (C) 2014  pancake

for a in . .. ../.. ; do [ -e $a/tests.sh ] && . $a/tests.sh ; done

NAME='dbg.oo 10'
FILE=/bin/ls
ARGS=-d
BROKEN=
CMDS='10oo
e file.path
dk 9
'
EXPECT='dbg:///bin/ls
'
IGNORE_ERR=1
run_test

NAME='dbg.ood 10'
FILE=/bin/ls
ARGS=-d
BROKEN=
CMDS='10ood
e file.path
dk 9
'
EXPECT='dbg:///bin/ls
'
IGNORE_ERR=1
run_test

NAME='oo ; dc'
FILE=../../bins/elf/analysis/x86-helloworld-gcc
ARGS=-d
BROKEN=
CMDS='oo
dc
'
EXPECT='Hello world!
'
IGNORE_ERR=1
run_test
