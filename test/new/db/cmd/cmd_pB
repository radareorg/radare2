NAME=pB 0xff
FILE=-
EXPECT=<<EOF
1111111100000000
EOF
CMDS=<<EOF
wx 0xff
pB 2
EOF
RUN

NAME=pb 0x12
FILE=-
EXPECT=<<EOF
00010010
0100
1001
EOF
CMDS=<<EOF
wx 0x12
pb 8
pb 4 2
pb 4 3
EOF
RUN

NAME=pxb 8
FILE=-
EXPECT=<<EOF
0x00000000 0000.0000  0000.0000  0000.0000  0000.0000  0x00000000  ....
0x00000004 0000.0000  0000.0000  0000.0000  0000.0000  0x00000000  ....
EOF
CMDS=<<EOF
pxb 8
EOF
RUN

NAME=pB -10
FILE=malloc://1024
EXPECT=<<EOF
10010000100100001001000010010000100100001001000010010000100100001001000010010000
EOF
CMDS=<<EOF
wx 90909090909090909090 ; s 10 ; pB -10
EOF
RUN
