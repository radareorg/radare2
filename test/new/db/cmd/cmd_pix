NAME=pix medium size instructions
FILE=-
ARGS=-a x86 -b 32
CMDS=pix 9090909090
EXPECT=<<EOF
nop
nop
nop
nop
nop
EOF
RUN

NAME=pix smaller instruction
FILE=-
ARGS=-a x86 -b 32
CMDS=pix 52ee
EXPECT=<<EOF
push edx
out dx, al
EOF
RUN

NAME=pix large instruction
FILE=-
ARGS=-a x86 -b 32
CMDS=pix 31c09952682f636174682f62696e89e3526873737764682f2f7061682f65746389e1b00b52515389e1cd80
EXPECT=<<EOF
xor eax, eax
cdq
push edx
push 0x7461632f
push 0x6e69622f
mov ebx, esp
push edx
push 0x64777373
push 0x61702f2f
push 0x6374652f
mov ecx, esp
mov al, 0xb
push edx
push ecx
push ebx
mov ecx, esp
int 0x80
EOF
RUN
