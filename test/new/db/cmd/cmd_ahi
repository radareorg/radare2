NAME=ah*
FILE=malloc://16
CMDS=<<EOF
e asm.arch=x86
e asm.bits=64
wx 4883e4f0
ahi 10 @ 0x00404879
ah*
EOF
EXPECT=<<EOF
ahi 10 @ 0x404879
EOF
RUN

NAME=ah.
FILE=malloc://16
CMDS=<<EOF
ahi 10 @ 0x8
s 0x8
ah.
EOF
EXPECT=<<EOF
 0x00000008 => immbase=10
EOF
RUN

NAME=64bit ahi 10
FILE=-
ARGS=-m 0x100001000
CMDS=<<EOF
e io.va
e asm.relsub=false
e asm.leahints=false
e asm.arch=x86
e asm.bits=64
e io.va=true
wx c7055f44000000000000
pd 1
e asm.relsub=true; pd 1
ahi 10; pd 1
EOF
EXPECT=<<EOF
true
            0x100001000      c7055f440000.  mov dword [rip + 0x445f], 0 ; [0x100005469:4]=-1
            0x100001000      c7055f440000.  mov dword [0x100005469], 0 ; [0x100005469:4]=-1
            0x100001000      c7055f440000.  mov dword [4294988905], 0  ; [0x100005469:4]=-1
EOF
RUN

NAME=2: ahi s
