NAME=basic integer arith
FILE=malloc://0x200
EXPECT=<<EOF
a2 = 0x00000007
a3 = 0x00000009
a4 = 0x00000008
a5 = 0x00000003
a6 = 0xfffffffe
a7 = 0x00000013
a8 = 0x0000000d
EOF
CMDS=<<EOF
e asm.arch=xtensa
e asm.bits=32
wx 22a0060c7330828030729022c2012b3242a0080c354065c04065d0
aecu 0x0000001b
ar~a2,a3,a4,a5,a6,a7,a8
EOF
RUN

