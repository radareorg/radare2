NAME=String udis86
FILE=../../bins/elf/analysis/main
EXPECT=<<EOF
|           0x0040050a      bfc4054000     mov edi, str.Hello_World    ; 0x4005c4 ; "Hello World"
EOF
CMDS=<<EOF
e asm.arch = x86.udis
e asm.arch=x86
e asm.bits=32
e scr.columns = 90
aa
pd 1 @ 0x0040050a
EOF
RUN


NAME="16bit segment bounds"
FILE=malloc://1024k
CMDS=<<EOF
e asm.arch=x86.udis
e asm.bits=16
e anal.hasnext=0
wx e9c300 @ f000:ffaa
s f000:ffaa
pi 1
EOF
EXPECT=<<EOF
jmp 0xf0070
EOF
RUN

NAME="udis1"
CMDS=<<EOF
e asm.arch=x86.udis
e asm.bits=32
e anal.hasnext=0
b 0x4e
wx 743684c0741284d2b8010000007509f3c30f1f8000000000488b4e40488b07488b1648394f407f187c1e4889d64889c7e933e1ffff0f1f0084d274c60f1f4000b8ffffffffc36690b801000000c3
af
pif~?
afi $$~size[1]
EOF
EXPECT=<<EOF
32
78
EOF
RUN

NAME="udis2"
CMDS=<<EOF
e asm.arch=x86.udis
e asm.bits=32
e anal.hasnext=0
b 0x4e
wx 743684c0741284d2b8010000007509f3c30f1f8000000000488b4e40488b07488b1648394f407f187c1e4889d64889c7e933e1ffff0f1f0084d274c60f1f4000b8ffffffffc36690b801000000c3
af
