CMDS=pi 6@sym.JNI_OnLoad
EXPECT=<<EOF
push {r4, lr}
sub sp, 8
mov r4, r0
ldr r0, [0x000010e0]
ldr r1, [0x000010e4]
add r0, pc
EOF
RUN
