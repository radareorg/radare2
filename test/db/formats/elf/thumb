push {r7, lr}
add r7, sp, 0
movs r0, 0xa
bl rsym.putchar
adds r0, r3, 0
mov sp, r7
pop {r7, pc}
push {r3, r4, r5, r6, r7, r8, sl, lr}
mov r5, r0
mov r6, r1
mov r7, r2
ldr r8, [0x00008494]
bl sym._init
ldr r3, [0x00008498]
EOF
RUN

