            0x0804839d           e8 be ff ..  call sym.imp.__libc_start_main
            0x080483a2                    f4  hlt
            0x080483a3              8b 1c 24  mov ebx, dword [esp]
--
            0x0804838c               50  push eax
            0x0804838d       8d8300e6..  lea eax, [ebx - 0x1a00]
