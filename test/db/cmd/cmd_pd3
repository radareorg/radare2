            0x0804839d       e8beffffff  call sym.imp.__libc_start_main
            0x080483a2               f4  hlt
            0x080483a3           8b1c24  mov ebx, dword [esp]
--
            0x0804838c           50  push eax
            0x0804838d       8d83..  lea eax, [ebx - 0x1a00]
            0x08048393           50  push eax
            0x08048394           51  push ecx
