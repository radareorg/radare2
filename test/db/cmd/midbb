        [36m,[0m[36m=[0m[36m<[0m [32m0x100003b34[0m      [33m60[37m04[32m00[37mb4[0m       [32mcbz[36m x0[0m,[36m[36m sup.babel0[0m[0m[0m
EOF
RUN
