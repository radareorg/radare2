NAME=afcl: x86-64
FILE=--
CMDS=<<EOF
e asm.bits = 32
e asm.arch = x86
e asm.bits = 64
afcl
EOF
EXPECT=<<EOF
amd64
amd64syscall
ms
reg
swift
EOF
RUN

NAME=afcl: x86-64-override
FILE=bins/elf/true32
ARGS=-a x86 -b 64
BROKEN=1
CMDS=afcl
EXPECT=<<EOF
amd64
ms
EOF
RUN

NAME=afcl: x86-32
FILE=--
BROKEN=1
CMDS=<<EOF
e asm.bits = 64
e asm.arch = x86
e asm.bits = 32
afcl
EOF
EXPECT=<<EOF
pascal
optlink
stdcall
cdecl
fastcall
borland
watcom
EOF
RUN

NAME=afcl: x86-32-override
FILE=bins/elf/bomb
ARGS=-a x86 -b 32
BROKEN=1
CMDS=afcl
EXPECT=<<EOF
pascal
optlink
stdcall
cdecl
fastcall
borland
watcom
EOF
RUN


