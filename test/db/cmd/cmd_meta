NAME=CL FAIL if no file
BROKEN=1
FILE=--
CMDS=<<EOF
CL $$ foo
CL.
EOF
EXPECT=<<EOF
foo
EOF
RUN

NAME=CL FAIL if no rbinfile
BROKEN=1
FILE=-
CMDS=<<EOF
CL $$ foo
CL.
EOF
EXPECT=<<EOF
foo
EOF
RUN

NAME=CL base64
FILE=bins/elf/arg
CMDS=<<EOF
CL $$ base64:SEVMTE8gV09STEQ=
CL*
EOF
EXPECT=<<EOF
HELLO WORLD
EOF
RUN

NAME=CC.
FILE=-
CMDS=<<EOF
CC hello @ 10
CC.
CC.10
CC.@10
CC@10
EOF
EXPECT=<<EOF
hello
hello
0x0000000a CCu "hello"
EOF
RUN

NAME=CL add
FILE=-
BROKEN=1
CMDS=<<EOF
CL $$ foo.c:123
e asm.lines=0
e asm.flags=0
e asm.dwarf=1
e asm.cmt.col=20
CC-*
pd 1
CL-*
pd 1
EOF
EXPECT=<<EOF
0x00000000      0000           add byte [rax], al ; foo:123
0x00000000      0000           add byte [rax], al
EOF
RUN

NAME=CL add ok
FILE=bins/elf/hello.ppc
CMDS=<<EOF
CL $$ foo.c:123
e asm.lines=0
e asm.flags=0
e asm.dwarf=1
e asm.cmt.col=20
CC-*
pd 1
CL-*
pd 1
EOF
EXPECT=<<EOF
0x10000308      7c290b78       mr r9, r1 ; foo.c:123
0x10000308      7c290b78       mr r9, r1
EOF
RUN
