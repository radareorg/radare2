NAME=pB 0xff
FILE=-
CMDS=<<EOF
wx 0xff
pB 2
EOF
EXPECT=<<EOF
1111111100000000
EOF
RUN

NAME=pb 0x12
FILE=-
CMDS=<<EOF
wx 0x12
pb 8
pb 4 2
pb 4 3
EOF
EXPECT=<<EOF
00010010
0100
1001
EOF
RUN

NAME=pxb 8
FILE=-
CMDS=pxb 8
EXPECT=<<EOF
0x00000000 0000_0000  0000_0000  0000_0000  0000_0000  0x00000000  ....
0x00000004 0000_0000  0000_0000  0000_0000  0000_0000  0x00000000  ....
EOF
RUN

NAME=pB -10
FILE=malloc://1024
CMDS=wx 90909090909090909090 ; s 10 ; pB -10
EXPECT=<<EOF
10010000100100001001000010010000100100001001000010010000100100001001000010010000
EOF
RUN
