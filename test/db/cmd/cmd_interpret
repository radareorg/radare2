NAME=.- (edit, source tmp file)
FILE=-
CMDS=<<EOF
e cfg.editor=/bin/true
.-
EOF
EXPECT=<<EOF
EOF
RUN

NAME=.?e ?e
FILE=--
CMDS=<<EOF
.?e ?e hello world
EOF
EXPECT=<<EOF
hello world
EOF
RUN

NAME=.spp
FILE=-
CMDS=<<EOF
. bins/src/r2test.spp
EOF
EXPECT=<<EOF
Test
hello world
Eron

EOF
RUN

NAME=$foo=#!pipe
FILE=-
CMDS=<<EOF
#!pipe echo hello
$foo=#!pipe echo hello
$foo
?e --
"$foo=#!pipe echo hello"
$foo
?e --
$-*
$foo=\#!pipe echo hello
$foo
?e --
$-*
EOF
EXPECT=<<EOF
hello
--
hello
--
hello
--
EOF
RUN
