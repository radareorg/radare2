NAME=clippy
FILE=-
CMDS=<<EOF
-e scr.utf8=0
-e scr.utf8.curvy=0
?E0 Hello World
EOF
EXPECT=<<EOF
 .--.     .-------------.
 | _|     |             |
 | O O   <  Hello World |
 |  |  |  |             |
 || | /   `-------------'
 |`-'|
 `---'
EOF
RUN

