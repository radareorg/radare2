NAME=pdr recursive emu
FILE=malloc://1024
CMDS=<<EOF
e asm.arch=x86
e asm.bits=64
e asm.fcnlines=false
wx 48c7c01000000075084805b8000000eb064805e60000004889c7c3
af
e asm.emu=true
pdr~add rax[6]
EOF
EXPECT=<<EOF
0xc8
0xf6
EOF
RUN

NAME=pdr recursive emu with gp
FILE=malloc://1024
CMDS=<<EOF
e asm.arch=mips
e anal.gpfixed=false
wx 10000824cc009c270500281500000000200c082521401c010a00000800000000300c082521401c010800e003
af
e asm.fcnlines=false
e asm.emu=true
e anal.gp=0xabc
pdr~addu t0[7]
EOF
EXPECT=<<EOF
0x17b8
0x17c8
EOF
RUN

NAME=pdR recursive until ret
FILE=malloc://1024
CMDS=<<EOF
e asm.arch=8051
e asm.lines=false
wx 8003000000220000
pdR
EOF
EXPECT=<<EOF
0x00000000      8003           sjmp 0x0005
0x00000005      22             ret
EOF
RUN

