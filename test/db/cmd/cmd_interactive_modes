NAME=Internal less
FILE=-
CMDS=<<EOF
e scr.interactive=false
pd 1~..
EOF
EXPECT_ERR=<<EOF
WARN: Internal less requires scr.interactive=true
EOF
RUN

NAME=Hud mode
FILE=-
CMDS=<<EOF
e log.origin=true
e scr.interactive=false
pd 1~...
EOF
EXPECT_ERR=<<EOF
ERROR: [r_cons_hud_string] Hud mode requires scr.interactive=true
EOF
RUN
