NAME=dbg.fork.child.bp.swstep
FILE=bins/elf/analysis/x64-fork-test
ARGS=-d
CMDS=<<EOF
e scr.color=0
e dbg.swstep=true
e dbg.forks=true
db sym.break_on_me
dc
dpc
dc
db-*
dc
dc
dp-
dp=`dp~ppid[1]`
dc
dc
EOF
EXPECT=<<EOF
child in leaf!
child process terminating!
[+] signal 17 aka SIGCHLD received 0
main exiting!
EOF
RUN

