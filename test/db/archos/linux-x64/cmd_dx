NAME=dx should not advance seek
FILE=bins/elf/ls-focal
ARGS=-d
CMDS=<<EOF
s > $seek1
dx 9090909090
s > $seek2
dif $seek1 $seek2
doc
EOF
EXPECT=<<EOF

EOF
RUN

NAME=dxrs restores only registers
FILE=bins/elf/ls-focal
ARGS=-d
CMDS=<<EOF
dr~!rip~!rsp~!rflags
?e ---
dxrs 48c7c000010000 # mov rax, 0x100
dr~!rip~!rsp~!rflags
?e ---
wv4 0 @rsp
pv4 @rsp
?e ---
dxrs 48c7042444332211 # mov [rsp], 0x11223344
pv4 @rsp
doc
EOF
EXPECT=<<EOF
rax = 0x00000000
rbx = 0x00000000
rcx = 0x00000000
rdx = 0x00000000
r8 = 0x00000000
r9 = 0x00000000
r10 = 0x00000000
r11 = 0x00000000
r12 = 0x00000000
r13 = 0x00000000
r14 = 0x00000000
r15 = 0x00000000
rsi = 0x00000000
rdi = 0x00000000
rbp = 0x00000000
orax = 0x0000003b
---
rax = 0x00000000
rbx = 0x00000000
rcx = 0x00000000
rdx = 0x00000000
r8 = 0x00000000
r9 = 0x00000000
r10 = 0x00000000
r11 = 0x00000000
r12 = 0x00000000
r13 = 0x00000000
r14 = 0x00000000
r15 = 0x00000000
rsi = 0x00000000
rdi = 0x00000000
rbp = 0x00000000
orax = 0x0000003b
---
0x00000000
---
0x11223344
EOF
RUN

NAME=dxa
FILE=bins/elf/ls-focal
ARGS=-d
CMDS=<<EOF
dr~!rip~!rsp~!rflags
?e ---
dxa mov rax, 0x100
dr~!rip~!rsp~!rflags
?e ---
"dxa mov rbx, 0x200; mov rcx, 0x300"
dr~!rip~!rsp~!rflags
doc
EOF
